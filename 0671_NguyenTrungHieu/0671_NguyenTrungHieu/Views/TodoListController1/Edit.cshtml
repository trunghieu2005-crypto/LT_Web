@{
    @model _0671_NguyenTrungHieu.Models.TodoJob

    <h2>Chỉnh sửa công việc</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="MaCongViec" />

                <div class="form-group mb-3">
                    <label class="control-label">Tên công việc</label>
                    <input asp-for="TenCongViec" class="form-control" />
                </div>
                <div class="form-group mb-3 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="HoanThanh" /> Đã hoàn thành
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
}
