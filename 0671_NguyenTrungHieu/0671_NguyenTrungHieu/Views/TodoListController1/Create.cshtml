@{
    @model _0671_NguyenTrungHieu.Models.TodoJob

    <h2>Tạo mới công việc</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label class="control-label">Tên công việc</label>
                    <input asp-for="TenCongViec" class="form-control" placeholder="Nhập tên công việc..." />
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Mã công việc</label>
                    <input asp-for="MaCongViec" class="form-control" placeholder="Nhập mã công việc..." />
                </div>
                
                <div class="form-group mb-3 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="HoanThanh" /> Đã hoàn thành
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu lại" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
}
